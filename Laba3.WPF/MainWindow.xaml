<Window x:Class="Laba3.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba3.WPF"
        mc:Ignorable="d"
        Title="Подземелье с сокровищами" 
        Height="800" Width="1000"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
        </Style>

        <Style TargetType="Ellipse">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Новая игра" Click="NewGame_Click"/>
                <MenuItem Header="Сохранить" Click="SaveGame_Click"/>
                <MenuItem Header="Загрузить" Click="LoadGame_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="Размер клетки">
                    <MenuItem Header="24px" Click="TileSize24_Click"/>
                    <MenuItem Header="32px" Click="TileSize32_Click"/>
                    <MenuItem Header="48px" Click="TileSize48_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Background="Black">
            <Canvas x:Name="GameCanvas" 
                    Width="2000" 
                    Height="1500"
                    Background="Black">
            </Canvas>
        </ScrollViewer>
        
        <Border Grid.Row="2" 
                Background="#1E1E1E" 
                Padding="10">
            <StackPanel>
                <TextBlock x:Name="InfoText" 
                           Foreground="White" 
                           FontFamily="Consolas"
                           FontSize="14"/>
                <TextBlock Text="Управление: WASD/Стрелки - движение, J - сохранить, L - загрузить, Q - выход" 
                           Foreground="LightGray" 
                           FontFamily="Consolas"
                           FontSize="12"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>